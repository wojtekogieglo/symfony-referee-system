{% extends 'base.html.twig' %}

{% block title %} RefereeApp {% endblock %}

{% block body %}

    <header id="head" class="secondary"></header>

    <div class="container">

        <ol class="breadcrumb">
            <li><a href="/">Home</a></li>
            <li class="active">Dodaj klub</li>
        </ol>
        <article class="col-xs-12">
            <header class="page-header">
                <h1 class="page-title">Dodaj klub</h1>
            </header>
            <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h3 class="thin text-center">Dodaj klub</h3>
                        <hr>
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.club_name) }}
                            {{ form_widget(form.club_name) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.league_id) }}
                            {{ form_widget(form.league_id) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.stadium) }}
                            {{ form_widget(form.stadium) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.founded_year) }}
                            {{ form_widget(form.founded_year) }}
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-lg-12 text-right">
                                {{ form_label(form.save) }}
                                {{ form_widget(form.save) }}
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </article>
    </div>
    <div class="top-space"></div>

{% endblock %}