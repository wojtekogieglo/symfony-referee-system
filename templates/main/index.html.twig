{% extends 'base.html.twig' %}

{% block title %} RefereeApp {% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_REFEREE')%}
        <header id="head">
            <div class="container">
                <div class="row">
                    <h1 class="lead">#REFEREEAPP</h1>
                    <p><a class="btn btn-action btn-lg"
                          {% if is_granted('ROLE_ADMIN') %}
                              href = "/game"
                          {% elseif is_granted('ROLE_REFEREE') %}
                              href = "/referee_game"
                          {% endif %}
                              role="button">SPOTKANIA</a></p>
                </div>
            </div>
        </header>
    {% else %}
        <header id="head">
            <div class="container">
                <div class="row">
                    <h1 class="lead">#REFEREEAPP</h1>
                    <p><a class="btn btn-action btn-lg" href = "login" role="button">ZALOGUJ SIÄ˜</a></p>
                </div>
            </div>
        </header>
    {% endif %}


{% endblock %}