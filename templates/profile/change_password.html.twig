{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/css/bootstrap-datepicker.css">
{% endblock %}


{% block body %}
    {% embed 'inc/new.html.twig'%}
        {% block list %}
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li class="active">Zmiana hasła</li>
            </ol>
        {% endblock %}
        {% block page_title %} Zmiana hasła {% endblock %}
        {% block form %}
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.oldPassword) }}
                {{ form_widget(form.oldPassword) }}
            </div>
            <div class="form-group">
                {{ form_label(form.newPassword.first) }}
                {{ form_widget(form.newPassword.first) }}
            </div>
            <div class="form-group">
                {{ form_label(form.newPassword.second) }}
                {{ form_widget(form.newPassword.second) }}
            </div>
            <div class="row">
                <div class="col-lg-12 text-right">
                    {{ form_label(form.save) }}
                    {{ form_widget(form.save) }}
                </div>
            </div>
            {{ form_end(form) }}
            {% if form.vars.errors.form.getErrors(true)|length %}
                <br>
                <div class="alert alert-danger">
                    <ul>
                        {% for error in form.vars.errors.form.getErrors(true) %}
                            <li>{{ error.message }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        {% endblock %}
    {% endembed %}
{% endblock %}